<section class='section h-screen'>
  <div class="section-container">
    <h1 class='text-2xl'>New Employee</h1>
    <% if @employee.errors.any? %>
      <h2>Errors</h2>
      <div>
        <% @employee.errors.full_messages.each do |error| %>
          <p>error</p>
        <% end %>
      </div>
    <% end %>
    <%= render 'form', employee: @employee, department: @department %>
    <%= link_to 'Back to department', department_path(@department), class: 'bg-slate-800 w-full md:w-[500px] text-slate-100 py-3 px-6 uppercase rounded-lg flex align-cente justify-center mx-auto' %>
  </div>
</section>
