<section class='section h-screen'>
  <div class='section-container'>
    <h1 class='text-2xl'>New Department</h1>
    <% if @department.errors.any? %>
      <h2>Errors</h2>
      <div>
        <% @department.errors.full_messages.each do |error| %>
          <p>error</p>
        <% end %>
      </div>
    <% end %>
    <%= render 'form', department: @department %>
    <%= link_to 'Back', departments_path, class: 'bg-slate-800 w-full md:w-[500px] text-slate-100 py-3 px-6 uppercase rounded-lg flex align-cente justify-center mx-auto' %>
  </div>
</section>
