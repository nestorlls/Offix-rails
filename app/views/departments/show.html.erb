<section class='section h-screen'>
  <div class='section-container'>
    <h1 class='text-2xl py-4'> <%= @department.name %></h1>
    <p class='text-md py-2'><%= @department.description %></p>
    <h2 class='text-xl py-2'>Employees</h2>
    <%= link_to 'New employee', new_employee_path(department_id: @department.id), class: 'bg-slate-700 w-full md:w-[300px] text-slate-100 py-3 px-6 uppercase rounded-lg flex align-cente justify-center' %>
    <div class='my-5 flex flex-col gap-5'>
      <% @employees.each do |employee| %>
        <div class='shadow-md rounded-lg flex flex-col border-slate-600 p-2 gap-2'>
          <div class='flex gap-2'>
            <%= image_tag employee.avatar.attached? ? employee.avatar : '/images/avatar_user.png', class: 'w-16 h-16 rounded-full' %>
            <div>
              <p><%= employee.name %></p>
              <p><%= employee.role %></p>
            </div>
          </div>
          <div class=''>
            <%= link_to 'Edit', edit_employee_path(employee), class: 'text-red-300 py-2 justify-self-end' %>
            <%= link_to 'Desctroy', employee_path(employee), data: { turbo_method: :delete, turbo_confirm: 'Are you sure delete?' }, class: 'text-red-300 py-2 justify-self-end' %>
          </div>
        </div>
      <% end %>
    </div>
    <%= link_to 'Back to departments', departments_path, class: 'bg-slate-800 w-full md:w-[500px] text-slate-100 py-3 px-6 uppercase rounded-lg flex align-cente justify-center mx-auto' %>
  </div>
</section>
