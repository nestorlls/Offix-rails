<section class='py-20 px-56'>
  <div>
    <h1 class='text-2xl font-bold py-3'>Departments</h1>
    <button class="py-2 px-6 text-white text-lg bg-slate-800 rounded-md">
      New Department
    </button>
    <div>
      <% @departments.each do | department | %>
        <div class='bg-slate-100 my-4 mx-0 shadow-xl rounded-lg p-2'>
          <div class=' flex justify-between'>
            <%= link_to department.name, department_path(department), class: 'font-semibold text-lg'  %>            
            <span class=''><%= department.employees_count %> employees</span>
          </div>
          <div class='flex gap-2'>
            <%= link_to "edit", edit_department_path(department),  class: 'text-red-300 py-2 justify-self-end'%>
            <%= link_to "destroy", department_path(department), data: {
              turbo_method: :delete, turbo_confirm: 'Are you sure!' }, class: 'text-red-300 py-2 justify-self-end'  %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
